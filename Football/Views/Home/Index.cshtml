@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Last</th>
                <th>First</th>
                <th>Id</th>
                <th>Rush</th>
                <th>Rush Yards</th>
                <th>Rush Td</th>
                <th>Targets</th>
                <th>Rec</th>
                <th>Rec Yards</th>
                <th>Rec Td</th>
                <th>Attempts</th>
                <th>Pass Yards</th>
                <th>Pass Td</th>
                <th>Pick</th>
                <th>Fumble</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Plax.Count; i++)
            {
            <tr>
                <td>@Model.Plax[i].LastName</td>
                <td>@Model.Plax[i].FirstName</td>
                <td>@Model.Plax[i].PlayerId</td>
                <td>@Model.Plax[i].Rush</td>
                <td>@Model.Plax[i].RushYards</td>
                <td>@Model.Plax[i].RushTd</td>
                <td>@Model.Plax[i].Targets</td>
                <td>@Model.Plax[i].Rec</td>
                <td>@Model.Plax[i].RecYards</td>
                <td>@Model.Plax[i].RecTd</td>
                <td>@Model.Plax[i].Attempts</td>
                <td>@Model.Plax[i].PassYards</td>
                <td>@Model.Plax[i].PassTd</td>
                <td>@Model.Plax[i].Pick</td>
                <td>@Model.Plax[i].Fum</td>
            </tr>
            }
        </tbody>
    </table>
</div>

